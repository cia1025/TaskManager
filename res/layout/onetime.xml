<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@drawable/bg1">

	<TextView android:text="@string/onetime" android:id="@+id/tvOneTime"
		android:textSize="15px" android:layout_width="fill_parent"
		android:gravity="center" android:layout_height="wrap_content">
	</TextView>

	<TextView android:text="" android:layout_width="fill_parent"
		android:layout_height="2px" android:background="#FFFFFF">
	</TextView>

	<LinearLayout android:id="@+id/LinearLayout01"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:text="@string/year" android:id="@+id/tvYear"
			android:textSize="25px" android:layout_width="80px"
			android:layout_height="wrap_content">
		</TextView>

		<EditText android:text="" android:id="@+id/etYear"
			android:layout_width="150px" android:layout_height="wrap_content"
			android:numeric="integer">
		</EditText>

	</LinearLayout>

	<LinearLayout android:id="@+id/LinearLayout02"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:text="@string/month" android:id="@+id/tvMonth"
			android:textSize="25px" android:layout_width="80px"
			android:layout_height="wrap_content">
		</TextView>

		<EditText android:text="" android:id="@+id/etMonthr"
			android:layout_width="150px" android:layout_height="wrap_content">
		</EditText>

	</LinearLayout>


	<LinearLayout android:id="@+id/LinearLayout03"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:text="@string/day" android:id="@+id/tvDay"
			android:textSize="25px" android:layout_width="80px"
			android:layout_height="wrap_content">
		</TextView>

		<EditText android:text="" android:id="@+id/etDay"
			android:layout_width="150px" android:layout_height="wrap_content">
		</EditText>
	</LinearLayout>

	<RelativeLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<GridView android:id="@+id/gv" android:layout_height="50dip"
			android:layout_width="fill_parent" android:layout_alignParentBottom="true">
		</GridView>
	</RelativeLayout>

</LinearLayout>
