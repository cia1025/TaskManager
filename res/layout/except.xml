<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bg1">

	<TextView android:text="@string/weekcycle"
		android:id="@+id/tvOneTime" android:textSize="15px"
		android:layout_width="fill_parent" android:gravity="center"
		android:layout_height="wrap_content">
	</TextView>

	<TextView android:text="" android:layout_width="fill_parent"
		android:layout_height="2px" android:background="#FFFFFF">
	</TextView>


	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<Button android:id="@+id/butSelectAll"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:layout_height="40px" android:text="@string/selectAll">
		</Button>
		<Button android:id="@+id/butSelectNull"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:layout_height="40px" android:text="@string/selectNull">
		</Button>
		<Button android:id="@+id/butReverseSelect" android:layout_width="40px"
			android:layout_weight="1" android:layout_height="40px"
			android:text="@string/reverseSelect">
		</Button>

	</LinearLayout>

	<RelativeLayout android:id="@+id/RelativeLayout00"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView android:text="@string/calling" 
			android:id="@+id/Sunday"
			android:textSize="20px"
			android:layout_marginLeft="20px"
			android:layout_marginTop="12px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
		<CheckBox 
			android:id="@+id/cb00"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true">
		</CheckBox>

	</RelativeLayout>

	<TextView android:text="" android:layout_width="fill_parent"
		android:layout_height="2px" android:background="#FFFFFF">
	</TextView>

	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content"
		android:gravity="center"
		android:layout_height="wrap_content">

		<TextView android:text="@string/blueTooth" 
			android:id="@+id/Monday"
			android:textSize="20px"
			android:layout_marginTop="12px"
			android:layout_marginLeft="20px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
		<CheckBox  
			android:id="@+id/cb01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true">
		</CheckBox>

	</RelativeLayout>

	<TextView android:text="" android:layout_width="fill_parent"
		android:layout_height="2px" android:background="#FFFFFF">
	</TextView>

	<RelativeLayout android:id="@+id/RelativeLayout02"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView android:text="@string/charging" 
			android:id="@+id/Tuesday"
			android:textSize="20px"
			android:layout_marginTop="12px"
			android:layout_marginLeft="20px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
		<CheckBox 
			android:id="@+id/cb02"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true">
		</CheckBox>

	</RelativeLayout>

	<TextView android:text="" android:layout_width="fill_parent"
		android:layout_height="2px" android:background="#FFFFFF">
	</TextView>

	<RelativeLayout android:id="@+id/RelativeLayout03"
		android:layout_width="wrap_content"
		android:gravity="center"
		android:layout_height="wrap_content">

		<TextView android:text="@string/WIFI" 
			android:id="@+id/Wednesday"
			android:textSize="20px"
			android:layout_marginTop="15px"
			android:layout_marginLeft="20px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
		<CheckBox  
			android:id="@+id/cb03"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true">
		</CheckBox>

	</RelativeLayout>
	

	<RelativeLayout android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<GridView android:id="@+id/gv" android:layout_height="50dip"
			android:layout_width="fill_parent"
			android:layout_alignParentBottom="true">
		</GridView>
	</RelativeLayout>

</LinearLayout>
