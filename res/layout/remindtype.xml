<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bg1">

	<TextView android:text="@string/remind" android:id="@+id/tvRemind"
		android:textSize="15px" android:layout_width="fill_parent"
		android:gravity="center" android:layout_height="wrap_content">
	</TextView>

	<TextView android:text="" android:layout_width="fill_parent"
		android:layout_height="2px" android:background="#FFFFFF">
	</TextView>

	<RelativeLayout android:id="@+id/RelativeLayout00"
		android:gravity="center" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:text="@string/auto" android:id="@+id/tvAuto"
			android:textSize="20px" android:layout_marginLeft="20px"
			android:layout_marginTop="12px" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
		<ImageButton android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:id="@+id/ImageButton01"
			android:layout_alignParentRight="true">
		</ImageButton>

	</RelativeLayout>

	<TextView android:text="" android:layout_width="fill_parent"
		android:layout_height="2px" android:background="#FFFFFF">
	</TextView>

	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content" android:gravity="center"
		android:layout_height="wrap_content">

		<TextView android:text="@string/vibration"
			android:id="@+id/tvVibration" android:textSize="20px"
			android:layout_marginTop="12px" android:layout_marginLeft="20px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
		<ImageButton android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:id="@+id/ImageButton02"
			android:layout_alignParentRight="true">
		</ImageButton>

	</RelativeLayout>

	<TextView android:text="" android:layout_width="fill_parent"
		android:layout_height="2px" android:background="#FFFFFF">
	</TextView>

	<RelativeLayout android:id="@+id/RelativeLayout02"
		android:gravity="center" android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView android:text="@string/voice" android:id="@+id/tvVoice"
			android:textSize="20px" android:layout_marginTop="12px"
			android:layout_marginLeft="20px" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>

		<ImageButton android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:id="@+id/ImageButton03"
			android:layout_alignParentRight="true">
		</ImageButton>

	</RelativeLayout>

	<RelativeLayout android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<GridView android:id="@+id/gv" android:layout_height="50dip"
			android:layout_width="fill_parent"
			android:layout_alignParentBottom="true">
		</GridView>

	</RelativeLayout>

	
</LinearLayout>
